## ------------------------------------------------------------------------------
# LLM CONFIGURATION
# ------------------------------------------------------------------------------
LLM_MODEL=qwen3:1.7b
OLLAMA_HOST=http://ollama:11434
LLM_TIMEOUT=1500

# ------------------------------------------------------------------------------
# RAG CONFIGURATION
# ------------------------------------------------------------------------------
RAG_CHUNK_SIZE=350
RAG_CHUNK_OVERLAP=60
RAG_TOP_K=3
RAG_BACKEND=weaviate

# ------------------------------------------------------------------------------
# WEAVIATE CONFIGURATION
# ------------------------------------------------------------------------------
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=
WEAVIATE_INDEX_NAME=ResearchDocument
WEAVIATE_TEXT_KEY=content
WEAVIATE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
ALLOW_SCHEMA_RESET=true

# ------------------------------------------------------------------------------
# POSTGRESQL CONFIGURATION
# ------------------------------------------------------------------------------
POSTGRES_DB=research_assistant
POSTGRES_USER=research_assistant
POSTGRES_PASSWORD=research_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ------------------------------------------------------------------------------
# FILE PATHS
# ------------------------------------------------------------------------------
DATA_DIR=./data/raw
OUTPUT_DIR=./outputs

# ------------------------------------------------------------------------------
# LOGGING CONFIGURATION
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO

# ------------------------------------------------------------------------------
# GUARDRAILS CONFIGURATION
# ------------------------------------------------------------------------------
GUARDRAILS_CITATION_REQUIRED=true

# ------------------------------------------------------------------------------
# EVALUATION CONFIGURATION
# ------------------------------------------------------------------------------
EVAL_FAITHFULNESS_METRIC=trulens_groundedness

# ------------------------------------------------------------------------------
# EXTERNAL API KEYS (OPTIONAL)
# ------------------------------------------------------------------------------
# OPENAI_API_KEY=
# TRULENS_API_KEY=
# GUARDRAILS_API_KEY=
# DEEPL_API_KEY=

# ------------------------------------------------------------------------------
# ARXIV CONFIGURATION
# ------------------------------------------------------------------------------
ARXIV_MIN_RELEVANCE_SCORE=0.3
ARXIV_MAX_KEYWORDS=5

# ------------------------------------------------------------------------------
# API TIMEOUTS
# ------------------------------------------------------------------------------
RAG_INGESTION_TIMEOUT=1500
CREWAI_EXECUTION_TIMEOUT=1500
AGENT_EXECUTION_TIMEOUT=1500
AGENT_WRITER_TIMEOUT=1500
AGENT_REVIEWER_TIMEOUT=1500
AGENT_FACTCHECKER_TIMEOUT=1500
AGENT_TRANSLATOR_TIMEOUT=1500

