# ===== ResearchAssistantGPT | Environment template =====
# Copy this file to ".env" and fill values as needed.
# Never commit your .env file.

# --- LLM / Runtime ---
LLM_MODEL=llama3
OLLAMA_HOST=http://host.docker.internal:11434
LLM_TIMEOUT=60

# --- Retrieval / Chunking ---
RAG_CHUNK_SIZE=350
RAG_CHUNK_OVERLAP=60
RAG_TOP_K=5

# --- Weaviate ---
WEAVIATE_URL=http://host.docker.internal:8080
WEAVIATE_API_KEY=
WEAVIATE_INDEX_NAME=research_assistant
WEAVIATE_TEXT_KEY=content
WEAVIATE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2


# --- n8n / Postgres (for docker-compose) ---
N8N_PORT=5678
N8N_ENCRYPTION_KEY=changeme-super-secret-key

POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n
POSTGRES_PORT=5432

# --- Paths (override if you use custom folders) ---
DATA_DIR=./data/raw
OUTPUT_DIR=./outputs

# --- Logging / Debug ---
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# --- Evaluation & Governance (enable later as needed) ---
# OPENAI_API_KEY=
# TRULENS_API_KEY=
# GUARDRAILS_API_KEY=
# EVAL_ENABLE=false