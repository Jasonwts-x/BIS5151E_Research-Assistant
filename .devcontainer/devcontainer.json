{
    "name": "ResearchAssistantGPT",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "eamodio.gitlens",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.terminal.activateEnvironment": false,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit"
                }
            }
        }
    },
    "runArgs": [
        "--add-host=host.docker.internal:host-gateway"
    ],
    "containerEnv": {
        "PYTHONPATH": "/workspaces/BIS5151E_Research-Assistant",
        "OLLAMA_HOST": "http://host.docker.internal:11434",
        "HF_HOME": "/workspaces/BIS5151E_Research-Assistant/.hf_cache",
        "TRANSFORMERS_CACHE": "/workspaces/BIS5151E_Research-Assistant/.hf_cache/hub",
        "SENTENCE_TRANSFORMERS_HOME": "/workspaces/BIS5151E_Research-Assistant/.hf_cache/sentence-transformers"
    },
    "mounts": [
        "source=pip-cache,target=/home/vscode/.cache/pip,type=volume"
    ],
    "postCreateCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt",
    "remoteUser": "vscode",
    "portsAttributes": {
        "5678": {
            "label": "n8n"
        }
    }
}