{
    "name": "ResearchAssistantGPT (compose devcontainer)",
    "dockerComposeFile": [
        "../docker/docker-compose.yml"
    ],
    "service": "devcontainer",
    "workspaceFolder": "/workspaces/BIS5151E_Research-Assistant",
    "shutdownAction": "stopCompose",
    "runServices": [
        "postgres",
        "weaviate",
        "n8n",
        "devcontainer"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.analysis.extraPaths": [
                    "/workspaces/BIS5151E_Research-Assistant"
                ],
                "python.analysis.typeCheckingMode": "basic",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "charliermarsh.ruff"
            ]
        }
    },
    "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.cache/pip || true && python -m pip install --upgrade pip && pip install -r requirements.txt"
}